{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2023",
    "module": "esnext",
    "lib": ["ES2023"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@admin-platform/shared-types": ["libs/shared-types/src/index.ts"],
      "@admin-platform/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@admin-platform/shared-auth": ["libs/shared-auth/src/index.ts"],
      "@admin-platform/shared-firebase": ["libs/shared-firebase/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
