{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "ES2023",
    "declaration": true,
    "removeComments": true,
    "incremental": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "../../",
    "rootDir": "src",
    "paths": {
      "@admin-platform/shared-types": ["libs/shared-types/src/index.ts"],
      "@admin-platform/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@admin-platform/shared-auth": ["libs/shared-auth/src/index.ts"],
      "@admin-platform/shared-firebase": ["libs/shared-firebase/src/index.ts"]
    }
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
